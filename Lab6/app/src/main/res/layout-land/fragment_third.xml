<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/second_fragment"
        android:textColor="	#000000"
        android:textSize="25sp"></TextView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp">

        <TextView
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="9"
            android:hint="@string/your_last_name"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/your_first_name"
            android:id="@+id/firstName"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/your_age"
            android:id="@+id/age"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/your_profession"
            android:id="@+id/profession"></TextView>
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/your_gender"></TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_university_name"
            android:inputType="text"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:id="@+id/university"
            android:layout_marginStart="100dp"
            android:importantForAutofill="no"></EditText>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_class"
            android:inputType="text"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:id="@+id/cla"
            android:layout_marginStart="100dp"
            android:importantForAutofill="no"></EditText>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_course"
            android:inputType="text"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:id="@+id/course"
            android:importantForAutofill="no"
            android:layout_marginStart="100dp"></EditText>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_gpa"
            android:inputType="number"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="100dp"
            android:id="@+id/gpa"
            android:importantForAutofill="no"
            android:layout_marginStart="100dp"></EditText>





    </GridLayout>


</LinearLayout>