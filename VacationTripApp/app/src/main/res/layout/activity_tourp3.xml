            app:layout_constraintStart_toStartOf="@+id/place_name3"
            app:layout_constraintTop_toBottomOf="@+id/place_name3" />

        <ImageView
            android:id="@+id/place_image7"
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="hot4"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/place_name4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name6"
            app:srcCompat="@drawable/hot3" />

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="hot2"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/place_name3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hot2" />

        <TextView
            android:id="@+id/place_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="ЗАЙСАН ТОЛГОЙ"
            app:layout_constraintStart_toStartOf="@+id/place_image"
            app:layout_constraintTop_toBottomOf="@+id/place_image" />

        <TextView
            android:id="@+id/country_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сүхбаатар дүүрэг"
            app:layout_constraintStart_toStartOf="@+id/place_name2"
            app:layout_constraintTop_toBottomOf="@+id/place_name2" />

        <TextView
            android:id="@+id/place_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Парк"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_image4" />

        <ImageView
            android:id="@+id/place_image5"
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="hot1"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/place_name"
            app:layout_constraintEnd_toStartOf="@+id/place_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/suhee" />

        <ImageView
            android:id="@+id/place_image4"
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="hot3"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/place_name2"
            app:layout_constraintEnd_toStartOf="@+id/place_image7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_name"
            app:srcCompat="@drawable/hot4" />

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="ЧИНГИСИЙН ТАЛБАЙ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_image5" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сүхбаатар дүүрэг"
            app:layout_constraintStart_toStartOf="@+id/place_name"
            app:layout_constraintTop_toBottomOf="@+id/place_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:onClick="tonextpage2hot"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="Page1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>